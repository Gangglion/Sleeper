                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong18"
                android:text="새 노래18"
                android:gravity="left|center"
                android:background="@color/white"
                />

        </LinearLayout>
        </ScrollView>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sea_scrollView"
            android:visibility="invisible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sea_layout"
                android:orientation="vertical"
                android:visibility="invisible">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="바다 노래1"
                    android:id="@+id/seaSong1"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="바다 노래2"
                    android:id="@+id/seaSong2"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="바다 노래3"
                    android:id="@+id/seaSong3"
                    />
            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/wind_scrollView"
            android:visibility="invisible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wind_layout"
                android:orientation="vertical"
                android:visibility="invisible">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="바람 노래1"
                    android:id="@+id/windSong1"
                    />
