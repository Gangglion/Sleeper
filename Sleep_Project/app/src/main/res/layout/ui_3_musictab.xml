                android:id="@+id/birdSong3"
                android:text="새 노래3"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong4"
                android:text="새 노래4"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong5"
                android:text="새 노래5"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong6"
                android:text="새 노래6"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong7"
                android:text="새 노래7"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong8"
                android:text="새 노래8"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong9"
                android:text="새 노래9"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong10"
                android:text="새 노래10"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong11"
                android:text="새 노래11"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong12"
                android:text="새 노래12"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong13"
                android:text="새 노래13"
                android:gravity="left|center"
                android:background="@color/white"
                />
