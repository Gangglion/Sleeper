                android:id="@+id/birdSong14"
                android:text="새 노래14"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong15"
                android:text="새 노래15"
                android:gravity="left|center"
            android:background="@color/white"
            />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong16"
                android:text="새 노래16"
                android:gravity="left|center"
                android:background="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birdSong17"
                android:text="새 노래17"
                android:gravity="left|center"
                android:background="@color/white"
                />
