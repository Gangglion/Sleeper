<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="morningQ"
            android:icon="@drawable/setting_question"
            android:summaryOn="모닝콜 울릴 때 랜덤으로 문제가 나타납니다"
            android:summaryOff="모닝콜 울릴때 랜덤문제가 나타나지 않습니다"
            android:summary="켜져있을 경우 모닝콜 울릴 때 문제가 나타납니다."
            android:title="문제 나타내기"/>
    </PreferenceCategory>
    <PreferenceScreen
        android:icon="@drawable/setting_ring"
        android:title="알림 설정"
        android:summary="어플 알림에 대한 설정을 합니다"
        android:fragment="com.example.sleep_project">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pushalrim"
            android:summary="푸시 알림을 받습니다"
            android:title="푸시알림"/>
        <ListPreference
            android:entries="@array/alert_array"
            android:entryValues="@array/alert_array"
            android:key="alert_list"
            android:summary="어플 알림설정"
            android:title="알림 설정"/>
    </PreferenceScreen>
</PreferenceScreen>