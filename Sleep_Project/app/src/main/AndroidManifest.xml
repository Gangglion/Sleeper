<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sleep_project">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />\
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@drawable/sleeper_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sleeper_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sleep_Project">
        <activity android:name=".ringkind">
        </activity>
        <activity android:name=".selectapplock" />
        <activity android:name=".BrightControl" />
        <activity android:name=".personaltab" />
        <activity android:name=".seeservicetab" />
        <activity android:name=".UI_1_4_UserInfo_Activity">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".UI_2_Maintimertab"
            android:label="@string/title_activity_settings" >
        </activity>

        <service
            android:name=".UI_2_1_backgroundService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".UI_2_2_AlarmRing"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".UI_2_2_AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".UI_1_1_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI_1_2_permission_activity" />
        <activity android:name=".UI_1_3_login_activity" />
        <activity android:name=".UI_2_Maintimertab" />
        <activity android:name=".UI_3_Musictab" />
        <activity android:name=".UI_4_Statisticstab"/>
        <activity android:name=".UI_5_AccountTab" />
        <activity android:name=".UI_List" />
        <activity android:name=".UI_2_1_Lock_activity" />
        <activity android:name=".UI_2_2_AlarmImg_Activity" />
        <activity android:name=".SleepComparisonStatistics" />
        <activity android:name=".AppTimeStatistics" />
    </application>

</manifest>